<div id="hd" class="robots-nocontent">
  <h1>
    <a href="<%= R(MainController) %>" rel="home">
      <%== Thoth::Config.site.name %>
    </a>
  </h1>

  <div id="toolbar">
    <div class="subtitle">
      <%== Thoth::Config.site.desc %>
    </div>

    <ul>
      <li><%= A('Home',     :href => R(MainController), :rel => 'home') %></li>
      <li><%= A('Archives', :href => R(MainController, :archive, 2)) %></li>
      <% if Thoth::Config.site.enable_comments %>
        <li><%= A('Comments', :href => R(CommentController)) %></li>
      <% end %>
    </ul>
  </div>

  <%= render_template 'admin/toolbar' %>
</div>
