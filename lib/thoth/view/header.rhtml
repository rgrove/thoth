<div id="hd" class="robots-nocontent">
  <h1>
    <a href="<%= R(MainController) %>">
      <%= h(Thoth::Config.site.name) %>
    </a>
  </h1>

  <div id="toolbar">
    <div class="subtitle">
      <%= h(Thoth::Config.site.desc) %>
    </div>
    
    <ul>
      <li><%= A('Home',     :href => R(MainController)) %></li>
      <li><%= A('Archives', :href => R(MainController, :archive, 2)) %></li>
      <li><%= A('Comments', :href => R(CommentController)) %></li>
    </ul>
  </div>

  <%= render_template 'admin/toolbar' %>
</div>
